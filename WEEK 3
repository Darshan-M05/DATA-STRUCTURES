//POLYNOMIAL

#include <stdio.h>
#include <stdlib.h>
#include <math.h>

typedef struct Node {
    int coeff;
    int exp;
    struct Node *next;
} Node;

Node *poly = NULL;

void create() {
    int num, i;
    Node *t, *last = NULL;

    printf("Enter number of terms: ");
    scanf("%d", &num);
    printf("Enter each term with coeff and exp:\n");

    for (i = 0; i < num; i++) {
        t = (Node *)malloc(sizeof(Node));
        scanf("%d%d", &t->coeff, &t->exp);
        t->next = NULL;
        if (poly == NULL) {
            poly = last = t;
        } else {
            last->next = t;
            last = t;
        }
    }
}

void Display(Node *p) {
    while (p) {
        printf(p == poly ? "%dx%d" : " + %dx%d", p->coeff, p->exp);
        p = p->next;
    }
    printf("\n");
}

long Eval(Node *p, int x) {
    long val = 0;
    while (p) {
        val += p->coeff * pow(x, p->exp);
        p = p->next;
    }
    return val;
}

int main() {
    int x;
    create();
    Display(poly);
    printf("Enter value of x: ");
    scanf("%d", &x);
    printf("%ld\n", Eval(poly, x));
    return 0;
}

